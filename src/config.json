{
  "collections": ["budget", "text", "fiscal"],
  "default_collection": "budget",
  "ingestion_configs": [
    {
      "collection_name": "budget",
      "source_file": "budget_items.json",
      "contents_to_embed": ["program", "program_id", "expending_agency_expanded", "document_name", "appropriations_mof_2025_2026_expanded", "appropriations_mof_2026_2027_expanded"]
    },
    {
      "collection_name": "text", 
      "source_file": "text_items.json",
      "contents_to_embed": ["text"]
    },
    {
        "collection_name": "fiscal", 
        "source_file": "fiscal_notes.json",
        "contents_to_embed": ["text"]
    }
  ],
  "search": {
    "default_results": 5,
    "max_results": 300,
    "supported_search_types": ["semantic", "metadata", "both"]
  },
  "api": {
    "title": "Document RAG API",
    "description": "API for managing and searching documents using ChromaDB and RAG",
    "version": "1.0.0"
  },
  "system": {
    "documents_path": "./documents",
    "chroma_db_path": "./chroma_db/data",
    "chroma_collection_name": "default_collection",
    "chroma_distance_function": "cosine",
    "embedding_model": "text-embedding-004",
    "embedding_provider": "google",
    "embedding_dimensions": 768,
    "llm_model": "gemini-1.5-flash",
    "llm_provider": "google",
    "llm_temperature": 0.1,
    "llm_max_tokens": 1000,
    "chunk_size": 1000,
    "chunk_overlap": 200,
    "default_k": 5,
    "max_k": 20,
    "batch_size": 10,
    "max_workers": 4,
    "supported_file_types": [".txt", ".pdf", ".json"]
  }
} 