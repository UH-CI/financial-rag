#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-push checks for branch: $(git symbolic-ref --short HEAD)"

# Run frontend build
echo "📦 Building frontend..."
cd frontend
npm run build
if [ $? -ne 0 ]; then
  echo "❌ Frontend build failed. Push aborted."
  exit 1
fi

# Run frontend tests
echo "🧪 Running frontend tests..."
npm run test:run
if [ $? -ne 0 ]; then
  echo "❌ Frontend tests failed. Push aborted."
  exit 1
fi

cd ..

echo "✅ All pre-push checks passed!"

exit 0
