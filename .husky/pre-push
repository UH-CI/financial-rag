#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-push checks for branch: $(git symbolic-ref --short HEAD)"

# Check if npm is available
if ! command -v npm >/dev/null 2>&1; then
  echo "âš ï¸  npm not found in PATH, skipping frontend build check"
  echo "âœ… Pre-push checks completed (build check skipped)"
  exit 0
fi

# Run frontend build
echo "ğŸ“¦ Building frontend..."
cd frontend
npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Frontend build failed. Push aborted."
  exit 1
fi

# Run frontend tests
echo "ğŸ§ª Running frontend tests..."
npm run test:run
if [ $? -ne 0 ]; then
  echo "âŒ Frontend tests failed. Push aborted."
  exit 1
fi

cd ..

echo "âœ… All pre-push checks passed!"

exit 0
